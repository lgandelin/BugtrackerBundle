{% extends "WebaccessBugtrackerBundle::layout.html.twig" %}

{% block title %}{{ parent() }}{% endblock %}

{% block description %}{{ parent() }}{% endblock %}

{% block bugtracker_body %}

	{% render "WebaccessBugtrackerBundle:Dashboard:menu" with { 'route' : 'company' } %}

	<div id="dashboard" class="main-wrapper">
		<div class="header">
			<div class="title">
				<h1>{{ 'company.title' | trans }}</h1>
			</div>
			<div class="button_add">
				<a class="btn btn-warning" href="{{ path('webaccess_bugtracker_company_add') }}">{{ 'company.add' | trans }}</a>
			</div>
			<div class="clear"></div>
		</div>

		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>{{ 'generic.creation_date' | trans }}</th>
					<th>{{ 'company.name' | trans }}</th>
					<th>{{ 'generic.action' | trans }}</th>
				</tr>
			</thead>
			<tbody>

			{% if companies | length > 0 %}
				{% for company in companies %}
			        <tr>
			        	<td width="10%">{{ company.createdAt | date('d/m/y H:i') }}</td>
			        	<td>{{ company.name }}</td>
			        	<td class="action" width="12%">
							<a class="btn btn-warning" href="{{ path('webaccess_bugtracker_company_edit', {'company_id':company.id}) }}" title="{{ 'generic.edit' | trans }}">{{ 'generic.edit' | trans }}</a>
							<a class="btn btn-warning" href="{{ path('webaccess_bugtracker_company_delete', {'company_id':company.id}) }}" title="{{ 'generic.delete' | trans }}">{{ 'generic.delete' | trans }}</a>
						</td>
			        </tr>
			    {% endfor %}
			{% else %}
				<tr>
					<td colspan="3">
						{{ 'company.no_companies' | trans }}
					</td>
				</tr>
			{% endif %}

			</tbody>
		</table>
	</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
	    {% if(app.session.getFlash('company_added')) %}
	    	notification("{{ 'company.added' | trans }}");
	    {% elseif(app.session.getFlash('company_updated')) %}
	    	notification("{{ 'company.updated' | trans }}");
	    {% elseif(app.session.getFlash('company_deleted')) %}
	    	notification("{{ 'company.deleted' | trans }}");
	    {% endif %}
    </script>
{% endblock %}
