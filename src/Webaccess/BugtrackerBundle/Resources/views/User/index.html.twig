{% extends "WebaccessBugtrackerBundle::layout.html.twig" %}

{% block title %}{{ parent() }}{% endblock %}

{% block description %}{{ parent() }}{% endblock %}

{% block bugtracker_body %}

	{% render "WebaccessBugtrackerBundle:Dashboard:menu" with {'route' : 'user'} %}

	<div id="dashboard" class="main-wrapper">
		<div class="header">
			<div class="title">
				<h1>Users</h1>
			</div>
			<div class="button_add">
				<a class="btn btn-warning" href="{{ path('webaccess_bugtracker_user_add') }}">add a user</a>
			</div>
			<div class="clear"></div>
		</div>

		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Creation date</th>
					<th>Username</th>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Company</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>

			{% if users | length > 0 %}
				{% for user in users %}
			        <tr>
			        	<td>{{ user.createdAt | date('d/m/y H:i') }}</td>
			        	<td>{{ user.username }}</td>
			        	<td>{{ user.firstName }}</td>
			        	<td>{{ user.lastName }}</td>
			        	<td>{% if user.company %}{{ user.company.name }}{% endif %}</td>
			        	<td>
							<a class="btn btn-warning" href="{{ path('webaccess_bugtracker_user_edit', {'user_id':user.id}) }}" title="Edit.">Edit.</a>
							<a class="btn btn-warning" href="{{ path('webaccess_bugtracker_user_delete', {'user_id':user.id}) }}" title="Delt.">Delt.</a>
						</td>
			        </tr>
			    {% endfor %}
			{% else %}
				No users found.
			{% endif %}
			</tbody>
		</table>
	</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
