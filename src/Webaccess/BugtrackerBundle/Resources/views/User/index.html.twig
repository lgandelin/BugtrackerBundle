{% extends "WebaccessBugtrackerBundle::layout.html.twig" %}

{% block title %}{{ parent() }}{% endblock %}

{% block description %}{{ parent() }}{% endblock %}

{% block bugtracker_body %}

	{% include 'WebaccessBugtrackerBundle:Includes:menu.html.twig' %}

	PROJECTS

	<a href="{{ path('webaccess_bugtracker_user_add') }}">add user</a>

	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Creation date</th>
				<th>Username</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Company</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>

		{% if users | length > 0 %}
			{% for user in users %}
		        <tr>
		        	<td>{{ user.createdAt | date('d/m/y H:i') }}</td>
		        	<td>{{ user.username }}</td>
		        	<td>{{ user.firstName }}</td>
		        	<td>{{ user.lastName }}</td>
		        	<td>{% if user.company %}{{ user.company.name }}{% endif %}</td>
		        	<td>
						<a href="{{ path('webaccess_bugtracker_user_edit', {'user_id':user.id}) }}" title="Editer">Edit.</a>
						<a href="{{ path('webaccess_bugtracker_user_delete', {'user_id':user.id}) }}" title="Supprimer">Delete.</a>
					</td>
		        </tr>
		    {% endfor %}
		{% else %}
			No users found.
		{% endif %}
		</tbody>
	</table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
